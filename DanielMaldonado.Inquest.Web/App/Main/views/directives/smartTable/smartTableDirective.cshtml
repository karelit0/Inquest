<div class="row">
    <div class="col-md-12">
        <table class="table" st-pipe="ctrl.callServer" st-table="ctrl.data">
            <thead>
                <tr>
                    <th ng-repeat="propertyInfo in propertyInfoList" st-sort="{{propertyInfo.headerLabel}}">{{propertyInfo.headerLabel}}</th>
                </tr>
                <tr>
                    <th ng-repeat="propertyInfo in propertyInfoList"><input st-search="{{propertyInfo.pathEntity}}" /></th>
                </tr>
            </thead>
            <tbody ng-show="!ctrl.isLoading">
                <tr ng-repeat="item in ctrl.data">
                    <td ng-repeat="propertyInfo in propertyInfoList">
                        {{item[propertyInfo.pathProperty]}}
                    </td>
                    <td>
                        <edit-button-directive click-callback="ctrl.selectItem"
                                               entity-parameter="item"
                                               disable="0">
                        </edit-button-directive>
                    </td>
                </tr>
            </tbody>
            <tbody ng-show="ctrl.isLoading">
                <tr>
                    <td colspan="4" class="text-center">
                        <i class="fa fa-refresh fa-spin fa-2x fa-fw"></i>
                        <span class="sr-only">Loading...</span>
                    </td>
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <td class="text-center" st-pagination="" st-items-by-page="10" colspan="4"></td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>